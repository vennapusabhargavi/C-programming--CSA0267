// diameter, area,circumference of circle using function
#include <stdio.h>
float diameter(float r)
 {
    return 2 * r;
}
float circumference(float r)
 {
    return 2 * 3.14159 * r;
}
float area(float r)
 {
    return 3.14159 * r * r;
}
int main()
 {
    float radius, dia, circ, ar;
    printf("Enter radius of circle: ");
    scanf("%f", &radius);
    dia = diameter(radius);
    circ = circumference(radius);
    ar = area(radius);
    printf("Diameter of circle is: %.2f\n", dia);
    printf("Circumference of circle is: %.2f\n", circ);
    printf("Area of circle is: %.2f\n", ar);
    return 0;
}
