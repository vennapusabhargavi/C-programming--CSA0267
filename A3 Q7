// ASCII Value of All Characters of the String
#include <stdio.h>
int main() 
{
    char str[100];
    int sum = 0, i;
    printf("Enter a string: ");
    scanf("%[^\n]s", str); 
    
    for (i = 0; str[i] != '\0'; i++)
	 {
        sum += (int)str[i]; 
    }

    printf("Sum of ASCII values of all characters in the string: %d\n", sum);
    return 0;
}
