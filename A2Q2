//largest-1 & largest-2 in an array
#include <stdio.h>
int main() 
{
    int n, i, largest1, largest2;
    printf("Enter the size of array: ");
    scanf("%d", &n);
    int arr[n];
    printf("Enter the elements of array:\n");
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    if (arr[0] > arr[1]) {
        largest1 = arr[0];
        largest2 = arr[1];
    } else {
        largest1 = arr[1];
        largest2 = arr[0];
    }
    for (i = 2; i < n; i++) {
        if (arr[i] > largest1) {
            largest2 = largest1;
            largest1 = arr[i];
        } else if (arr[i] > largest2) {
            largest2 = arr[i];
        }
    }
    printf("The FIRST LARGEST = %d\n", largest1);
    printf("THE SECOND LARGEST = %d\n", largest2);
    return 0;
}
